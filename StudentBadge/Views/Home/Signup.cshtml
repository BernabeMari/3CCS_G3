@{
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - EduBadge</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Base styles */
        body {
            background: #fff6f1;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow-x: hidden;
            background-color: #fff6f1;
        }

        .carousel-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }
        
        .carousel-container::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(5px);
            z-index: 1;
        }
        
        .carousel-item {
            height: 100vh;
        }
        
        .carousel-item img {
            width: 100%;
            height: 100vh;
            object-fit: cover;
        }

        body::before {
            content: none;
            display: none;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 90%;
            max-width: 450px; /* Smaller width for signup container */
            background: rgba(255, 255, 255, 0.8);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.2);
            position: relative;
            margin: 0 auto;
            padding: 25px;
            border-top: 4px solid #8a2be2;
            z-index: 10;
            backdrop-filter: blur(5px);
        }
        
        /* Keyframes */
        /* Keyframes removed temporarily to fix errors */

        /* Adjust text and form elements */
        .signup-form {
            width: 100%;
            padding: 0;
        }

        h2, h5 {
            font-family: 'Inter', sans-serif;
            color: #8a2be2 !important;
        }
        
        h2 {
            margin-bottom: 0;
            font-size: 24px;
        }

        h5 {
            margin-top: 5px;
            margin-bottom: 15px;
            font-size: 16px;
        }

        .signup-form h3 {
            font-size: 18px;
            color: #8a2be2;
        }

        .signup-form p {
            font-size: 14px;
            color: #555;
        }

        label {
            color: #555;
            font-weight: 600;
            font-size: 14px;
            margin-bottom: 5px;
            display: block;
        }

        /* Adjust input fields */
        .form-control {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            font-size: 14px;
            color: #333;
            transition: all 0.3s ease;
            margin-bottom: 12px;
            width: 100%;
        }

        .form-control:focus {
                border-color: #8a2be2;
            box-shadow: 0 0 0 0.25rem rgba(231, 76, 60, 0.25);
            background: #fff;
            outline: none;
        }

        /* Button styles */
        .btn-primary {
            background: #8a2be2;
            border: none;
            padding: 10px 20px;
            width: 100%;
            font-weight: bold;
            font-size: 16px;
            color: white;
            border-radius: 5px;
            transition: all 0.3s ease;
            margin-top: 8px;
            position: relative;
            overflow: hidden;
        }

        .btn-primary:hover {
                background: #8a2be2;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.25);
        }
        
        .btn-primary::after {
            content: "";
            position: absolute;
            top: -50%;
            left: -60%;
            width: 200%;
            height: 200%;
            background: linear-gradient(transparent, rgba(255, 255, 255, 0.2), transparent);
            transform: rotate(30deg);
            transition: 0.8s;
        }
        
        .btn-primary:hover::after {
            left: 100%;
        }

        a {
            color: #8a2be2 !important;
            transition: all 0.3s ease;
            font-weight: 600;
            position: relative;
            text-decoration: none !important;
        }

        a:hover {
                color: #8a2be2 !important;
        }
        
        a::after {
            content: '';
            position: absolute;
            width: 100%;
            transform: scaleX(0);
            height: 2px;
            bottom: -2px;
            left: 0;
                background-color: #8a2be2;
            transform-origin: bottom right;
            transition: transform 0.4s ease-out;
        }
        
        a:hover::after {
            transform: scaleX(1);
            transform-origin: bottom left;
        }

        .alert {
            border-radius: 15px;
            padding: 12px;
            margin-bottom: 25px;
            border: none;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        /* Ghibli-inspired decorative elements */
        .container::after {
            content: "";
            position: absolute;
            bottom: 20px;
            right: 20px;
            width: 80px;
            height: 80px;
            background: radial-gradient(circle, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0) 70%);
            border-radius: 50%;
            opacity: 0.6;
            pointer-events: none;
            display: none;
        }
        
        .container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: none;
            pointer-events: none;
        }
        
        /* Additional Ghibli-inspired decorative elements */
        .signup-form::before {
            content: "";
            position: absolute;
            top: 15px;
            left: 15px;
            width: 60px;
            height: 60px;
            background: none;
            border-radius: 50%;
            opacity: 0;
            pointer-events: none;
        }
        
        .signup-form::after {
            content: "";
            position: absolute;
            bottom: 60px;
            right: 40%;
            width: 20px;
            height: 20px;
            background: none;
            border-radius: 50%;
            opacity: 0;
            pointer-events: none;
        }
        
        /* Form columns for wider layout */
        .form-row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -5px;
        }

        .form-col {
            flex: 1 0 45%;
            padding: 0 5px;
        }
        
        .form-group {
            position: relative;
            margin-bottom: 10px;
        }
        
        input:-webkit-autofill,
        input:-webkit-autofill:hover, 
        input:-webkit-autofill:focus {
            -webkit-text-fill-color: #5a8a9d;
            -webkit-box-shadow: 0 0 0px 1000px rgba(255, 255, 255, 0.65) inset;
            transition: background-color 5000s ease-in-out 0s;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .container {
                width: 90%;
                max-width: 400px;
                padding: 20px;
            }

            .form-col {
                flex: 1 0 100%;
            }

            .signup-form h3 {
                font-size: 16px;
            }

            .signup-form p {
                font-size: 12px;
            }

            label {
                font-size: 12px;
            }

            .form-control {
                font-size: 13px;
                padding: 8px;
            }

            .btn-primary {
                font-size: 14px;
                padding: 10px 15px;
            }
        }

        /* Add decorative elements */
        .ghibli-leaf {
            display: none;
        }

        .ghibli-dust {
            display: none;
        }

        .ghibli-dust:nth-child(2) {
            display: none;
        }

        .ghibli-dust:nth-child(3) {
            display: none;
        }
     
    </style>
</head>
<body>
    <!-- Carousel Background -->
    <div class="carousel-container">
        <div id="backgroundCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/tcu.jpg" class="d-block w-100" alt="TCU">
                </div>
                <div class="carousel-item">
                    <img src="/images/tcu1.jpg" class="d-block w-100" alt="TCU 1">
                </div>
                <div class="carousel-item">
                    <img src="/images/tcu2.jpg" class="d-block w-100" alt="TCU 2">
                </div>
                <div class="carousel-item">
                    <img src="/images/tcu3.png" class="d-block w-100" alt="TCU 3">
                </div>
                <div class="carousel-item">
                    <img src="/images/tcu4.jpg" class="d-block w-100" alt="TCU 4">
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="ghibli-leaf"></div>
        <div class="ghibli-dust"></div>
        <div class="ghibli-dust"></div>
        <div class="ghibli-dust"></div>
        
        <div class="signup-form">
            <div class="text-center mb-3">
                <img src="/images/student1.png" alt="StudentBadge Logo" style="max-width: 150px; height: auto;" />
            </div>
            <h2 class="text-center my-3">Create Account</h2>
            <h5 class="text-center mb-3">Join EduBadge Today!</h5>
            <div class="text-center mb-4">
                <p style="color: #666; margin-top: -10px; font-style: italic;">Tracking your educational achievements through interactive digital badges</p>
            </div>
            
            <div id="successMessage" class="alert alert-success text-center" style="display: none;"></div>
            <div id="errorMessage" class="alert alert-danger text-center" style="display: none;"></div>
            
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success text-center">
                    @ViewBag.SuccessMessage
                </div>
            }

            <form method="post" action="/Account/Signup">
                <div class="card-body p-0">
                    <div class="form-group mb-2">
                        <label for="fullName">Full Name</label>
                        <input type="text" id="fullName" name="fullName" class="form-control" required placeholder="Enter full name" />
                    </div>
                    
                    <div class="form-row">
                        <div class="form-col">
                            <div class="form-group mb-2">
                                <label for="username">Username</label>
                                <input type="text" id="username" name="username" class="form-control" required placeholder="Choose a username" />
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group mb-2">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" class="form-control" required placeholder="Create a password" />
                            </div>
                        </div>
                    </div>
                    
                    <!-- Hidden input for role, always employer -->
                    <input type="hidden" id="role" name="role" value="employer" />

                    <!-- Employer Fields - Always shown -->
                    <div id="employerFields" class="roleFields">
                        <div class="form-group mb-2">
                            <label for="company">Company</label>
                            <input type="text" id="company" name="company" class="form-control" placeholder="Enter company name" required />
                        </div>
                        
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group mb-2">
                                    <label for="email">Email</label>
                                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter company email" required />
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group mb-2">
                                    <label for="phoneNumber">Phone Number</label>
                                    <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" placeholder="Enter contact number" required />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary mt-2">Signup</button>
                    </div>
                    <div class="text-center mt-2">
                        <p>Already have an account? <a href="/Home/Login" class="text-decoration-none">Login here</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get the saved carousel index from localStorage
            const savedIndex = localStorage.getItem('carouselIndex') || 0;
            
            // Initialize the carousel
            const carouselElement = document.getElementById('backgroundCarousel');
            
            // Set the active slide based on saved state
            if (savedIndex > 0) {
                carouselElement.querySelector('.carousel-item.active').classList.remove('active');
                carouselElement.querySelectorAll('.carousel-item')[savedIndex].classList.add('active');
            }
            
            var carousel = new bootstrap.Carousel(carouselElement, {
                interval: 5000,
                wrap: true,
                ride: 'carousel',
                keyboard: false,
                pause: false,
                touch: false
            });
            
            // Save the current index when the carousel slides
            carouselElement.addEventListener('slid.bs.carousel', function(event) {
                localStorage.setItem('carouselIndex', event.to);
            });
            
            // Show success or error messages
            @if (TempData["Success"] != null)
            {
                <text>
                showMessage("@TempData["Success"]", "success");
                </text>
            }
            
            @if (TempData["Error"] != null)
            {
                <text>
                showMessage("@TempData["Error"]", "error");
                </text>
            }

            function showMessage(message, type) {
                if (type === "success") {
                    var successElement = document.getElementById("successMessage");
                    if (successElement) {
                        successElement.textContent = message;
                        successElement.style.display = "block";
                        setTimeout(function () {
                            successElement.style.display = "none";
                        }, 5000);
                    }
                } else if (type === "error") {
                    var errorElement = document.getElementById("errorMessage");
                    if (errorElement) {
                        errorElement.textContent = message;
                        errorElement.style.display = "block";
                        setTimeout(function () {
                            errorElement.style.display = "none";
                        }, 5000);
                    }
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
